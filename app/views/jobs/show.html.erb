

<div class="back">
	<%= link_to "Back", root_path %>
</div>

<div class="wrapper">
	
	<div class="header">
		<h1><%= @job.title %></h1>
		<div class="meta">
			<p>at <%= link_to @job.company, "#{@job.company_url}", target: 'blank' %> - added <%= time_ago_in_words @job.created_at %> ago</p>
		</div>
	</div>

	<div class="desc">
		<p><%= markdown(@job.description) %></p>
	</div>

	<div class="footer">
		<p><%= link_to "More about the job", @job.job_url, target: 'blank' %> â€¢ <%= mail_to @job.job_email, "Apply for this job", target: 'blank' %></p>

		<p><em>This job was added <%= time_ago_in_words @job.created_at %> ago</em></p>

		<% if logged_in? and current_user == @job.user %>

			<p><%= link_to "Edit", edit_job_path(@job), class: 'button' %></p>

		<% end %>
	</div>
</div>